{
  "name": "@arqon/llm-web3-toolkit",
  "version": "0.1.0",
  "description": "Production-grade Web3 integration for Large Language Models - MetaMask, multi-chain support, and function calling primitives",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "keywords": [
    "web3",
    "llm",
    "ai",
    "metamask",
    "ethereum",
    "function-calling",
    "openai",
    "anthropic",
    "blockchain",
    "crypto",
    "defi"
  ],
  "author": "ArqonAi",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArqonAi/LLM-Web3-Toolkit"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  }
}
