{
  "name": "@arqon/web3-core",
  "version": "0.1.0",
  "description": "Core Web3 primitives for LLM integration - wallet management, transaction handling, and blockchain interaction",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "viem": "^2.7.0",
    "ethers": "^6.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "web3",
    "ethereum",
    "wallet",
    "metamask",
    "blockchain"
  ],
  "author": "ArqonAi",
  "license": "Apache-2.0"
}
